<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/soal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        app:srcCompat="@drawable/gb4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ib_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        app:srcCompat="@drawable/dua"
        android:layout_below="@+id/soal4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ib_tiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/three"
        android:layout_alignTop="@+id/ib_2"
        android:layout_toLeftOf="@+id/ib_2"
        android:layout_toStartOf="@+id/ib_2"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="47dp" />

    <ImageButton
        android:id="@+id/ib_empat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib_tiga"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ib_2"
        android:layout_toRightOf="@+id/ib_2"
        app:srcCompat="@drawable/four" />

</RelativeLayout>